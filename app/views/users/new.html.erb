
<h1>Sign Up</h1>

<div class="container">
  <div class="row">
    <div class="col-6">
      <%= simple_form_for @user do |form| %>
        <%= form.error_notification%>
      
        <%= form.input :username %>
      
        <%= form.input :password %>
        
        <%= form.input :password_confirmation %>
        
        <%= form.button :submit, class: "btn-outline-secondary" %>
      
      <% end %>
    </div>
  </div>
</div>