<%= simple_form_for @writing do |f| %>
  
  <%= f.error_notification %>

  <%= f.input :function, collection: ['Author', 'Source Author', 'Librettist', 'Adapter', 'Translator'], include_blank: false %>

  <%= f.input :credited_author, as: :radio_buttons %>

  <%= hidden_field_tag :redirect_to, params[:redirect_to] %>

  <%= f.button :submit, class: 'btn-outline-secondary' %>

<% end %>