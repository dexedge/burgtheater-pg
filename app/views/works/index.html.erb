<table>
  <thead>
    <tr> 
      <th>id</th>
      <th>Title</th>
      <th>Genre</th>
      <th>Author</th>
      <th>Performances</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @works.each do |work| %>
      <tr>
        <td class="right"><%= work.id %></td>
        <td><i><%= work.title %></i></td>
        <td><%= work.genre %></td>
        <td>
          <% if work.authors[0] %>
            <%= link_to work.authors[0].lastname, work.authors[0] %>
          <% else %>
            NA
          <% end %>
        </td>
        <td class="right"><%= work.events.count %></td>
        <td class="detail-link"><%= link_to 'Details', work %></td>
        <!--<td><%= link_to 'Edit', edit_work_path(work) %></td>
        <td><%= link_to 'Delete', work, method: :delete, data: { confirm: 'Are you sure?' } %></td>-->
      </tr>
    <% end %>
  </tbody>
</table>

