<p id="notice"><%= notice %></p>
 <h2>
  <i><%= @work.title %></i>
</h2>

<h3>Performances</h3>
<table>
  <thead>
    <tr>
      <th colspan="2"></th>
      <th colspan="2" class="right">Receipts</th>
    </tr>
    <tr>
      <th>Date</th>
      <th>DOW</th>
      <th class="right">fl</th>
      <th class="right">kr</th>
    </tr>
  </thead>
  <tbody>
    <% @work.events.each do |event| %>
      <tr>
        <td><%= link_to event.date, event %></td>
        <td><%= event.date.strftime("%a") %></td>
        <td class="right"><%= event.receipts.divmod(60)[0]%></td>
        <td class="right"><%= event.receipts.divmod(60)[1]%></td>
      </tr>
    <% end %>
  </tbody>
</table>
<p>
  <strong>Notes:</strong>
  <%= @work.notes %>
</p>

<p>
  <strong>Created:</strong>
  <%= @work.created_at.to_date.strftime("%a, %-d %b %Y") %>
</p>

<p>
  <strong>Updated:</strong>
  <%= @work.updated_at.strftime("%a, %-d %b %Y, %H:%M %Z") %>
</p>
<hr>
<%= link_to 'Edit', edit_work_path(@work) %> |
<%= link_to 'Back', url_for(:back) %> 
