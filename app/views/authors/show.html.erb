<p id="notice"><%= notice %></p>
<h2>
  <%= @author.firstnames%> <%= @author.lastname %>
</h2>
<p>
  <strong>Birth:</strong>
  <%= @author.birth %>
</p>
<p>
  <strong>Death:</strong>
  <%= @author.death %>
</p>
<h3>Works Performed</h3>
<table>
  <thead>
    <tr>
      <th>Date</th>
      <th>Title</th>
      <th>Function</th>
    </tr>
  </thead>
  <tbody>
    <% @author.works.each do |work| %>
      <% work.events.each do |event| %>
        <tr>
          <td><%= link_to event.date, event %></td>
          <td><i><%= work.title %></i></td>
          <td><%= work.writings[0].function %></td>
        </tr>
      <% end %>
    <% end %>
  </tbody>

</table>

<hr>
<p>
  <strong>Created:</strong>
  <%= @author.created_at.to_date.strftime("%a, %-d %b %Y") %>
</p>
<p>
  <strong>Updated:</strong>
  <%= @author.updated_at.strftime("%a, %-d %b %Y, %H:%M %Z") %>
</p>

<% if @author.prev %>
  <%= link_to 'Previous Author', @author.prev %>
  <% if @author.next %>
   |
  <% end %>
<% end %>
<% if @author.next %> 
  <%= link_to 'Next Author', @author.next %>
<% end %>
<hr>
<%= link_to 'Edit', edit_author_path(@author) %> |
<%= link_to 'Back', authors_path %>
