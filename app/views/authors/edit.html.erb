<p style="margin: 0">
  <% if @author.prev %>
    <%= link_to 'Previous Author', edit_author_path(@author.prev) %> 
    <% if @author.next %> 
      | <%= link_to 'Next Author', edit_author_path(@author.next) %>
    <% end %>
  <% else %>
    <%= link_to 'Next Author', edit_author_path(@author.next) %>
  <% end %>
</p>
<h1>Editing Author</h1>

<div class="row">
  <div class="col-6">
    <%= render 'form', authors: @author %>
  </div>
</div>
<hr class="top">
<%= link_to 'Show', @author %>
