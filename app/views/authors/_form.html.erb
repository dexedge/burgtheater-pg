<%= simple_form_for @author do |form| %>
  <%= form.error_notification%>

  <%= form.input :lastname, label: 'Last name' %>
  
  <%= form.input :firstnames, label: 'First name(s)' %>

  <%= form.input :birth %>

  <%= form.input :death %>

  <%= form.input :notes, input_html: { rows: 3 } %>

  <%= form.button :submit, class: "btn-outline-secondary" %> 

<% end %>
