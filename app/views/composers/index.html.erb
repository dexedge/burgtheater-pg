<% cache(@composers) do %>
<table class="table table-responsive table-striped">
  <thead>
    <tr>
    <th>id</th>
      <th>Last Name</th>
      <th>First Names</th>
      <th>Birth</th>
      <th>Death</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @composers.each do |composer| %>
      <% cache(composer) do %> 
        <tr>
          <td><%= composer.id %></td>
          <td><%= link_to composer.lastname, composer %></td>
          <td><%= composer.firstnames %></td>
          <td><%= composer.birth %></td>
          <td><%= composer.death %></td>
          <!--<td><%= link_to 'Show', composer %></td>
          <td><%= link_to 'Edit', edit_composer_path(composer) %></td>
          <td><%= link_to 'Destroy', composer, method: :delete, data: { confirm: 'Are you sure?' } %></td>-->
        </tr>
      <% end %>
    <% end %>
  </tbody>
</table>
<% end %>
