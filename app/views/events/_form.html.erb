<%= simple_form_for @event do |form| %>
  <%= form.error_notification%>

  <%= form.input :date %>

  <%= form.input :receipts, label: 'Receipts (kr)' %>

  <%= form.input :kind, collection: ["regular", "premiere", "Viennese premiere", "free", "concert", "closed",  "canceled", "unknown"] %>

  <%= form.input :double, as: :radio_buttons %>
  
  <%= form.input :zinzendorf, as: :radio_buttons %>

  <%= form.input :notes, input_html: { rows: '8',style: "font-size:14px"} %>

  <%= form.button :submit, class: "btn-outline-secondary" %>
<% end %>
