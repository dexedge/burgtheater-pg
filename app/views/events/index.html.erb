<p id="notice"><%= notice %></p>

<h1>Events</h1>
<div>
  <h4>Import data!</h4>
  <%= form_tag import_events_path, multipart: true do %>
    <%= file_field_tag :file %>
    <%= submit_tag "Import from file"%>
  <% end %>
</div>

<table>
  <thead>
    <tr>
      <th>id</th>
      <th>date</th>
      <th>receipts</th>
      <th>kind</th>
      <th>zinz</th>
      <th>double</th>
      <th>created</th>
      <th>modified</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @events.each do |event| %>
      <tr>
        <td><%= event.id %></td>
        <td><%= event.date %></td>
        <td><%= event.receipts %></td>
        <td><%= event.kind %></td>
        <td><%= event.zinzendorf %></td>
        <td><%= event.double %></td>
        <td><%= event.created_at.to_date.strftime("%a, %-d %b %Y") %></td>
        <td><%= event.updated_at %></td>
        <td><%= link_to 'Show', event %></td>
        <td><%= link_to 'Edit', edit_event_path(event) %></td>
        <td><%= link_to 'Destroy', event, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Event', new_event_path %>
